<!DOCTYPE html>
<html>

<head>
    <title>
        <%=title%>
    </title>

    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.1/noty.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.1/noty.min.js"></script>

    <link rel="stylesheet" href="/css/layout.css">
    <link rel="stylesheet" href="/css/header.css">
    <link rel="stylesheet" href="/css/footer.css">
    <link rel="stylesheet" href="/css/login_signup.css">
    <link rel="stylesheet" href="/css/forgetPassword.css">
    <!-- <link rel="stylesheet" href="/css/home.css">-->

    <%- style %>
</head>

<body>
    <%- include('_header'); %>
        <script src="/js/BASE_URL.js"></script>

        <main id="layout-main">
            <%- body %>
        </main>

        <%- include('_footer'); %>

            <%- script %>

                <script src="/js/otp.js"></script>
                <script>
                    <% if(flash.success && flash.success.length>0){%>

                    new Noty({
                        theme: 'relax',
                        text: "<%=flash.success%>",
                        type: 'success',
                        layout: 'top',
                        timeout: 1500
                    }).show();
                    <%}%>

                    <% if(flash.error && flash.error.length>0){%>

                    new Noty({
                        theme: 'relax',
                        text: "<%=flash.error%>",
                        type: 'error',
                        layout: 'top',
                        timeout: 1500
                    }).show();
                    <%}%>
                </script>


</body>

</html>