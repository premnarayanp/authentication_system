<div class="login-signUp">

    <form class="forms" action="/users/forget/password" method="POST">
        <span class='formsHeader'>Forget Password</span>

        <div class="field">
            <input id="mail-id" type="email" name="email" placeholder="Enter Email" required>
        </div>

        <div class="field">
            <input type="password" name="newPassword" placeholder="Enter New Password" required>
        </div>

        <div class="field">
            <input type="password" name="confirmNewPassword" placeholder="Enter Confirm Password" required>
        </div>

        <div id="otp-container">
            <div class="field">
                <input id="otp-btn" type="text" name="otp" placeholder="Enter OTP" required>
            </div>

            <div class="field">
                <button onclick="sendOTP(event)">Send OTP</button>
            </div>
        </div>

        <input id="OTPid" name="otpId" value="" type="hidden" />

        <div class="field">
            <button type="submit" value="Forget">Forget Password</button>
        </div>

    </form>

